#!/usr/bin/env bash

################################################################################
# Tmux
################################################################################
if [ -z "$TMUX" ]; then
  tmux new-session -s $$;
else
  export TERM="screen-256color"
fi

################################################################################
# Aliases
################################################################################
source ~/.dotfiles/zsh/aliases

################################################################################
# Functions
################################################################################
source ~/.dotfiles/zsh/functions

################################################################################
# Path
################################################################################
source ~/.dotfiles/zsh/path

################################################################################
# Settings
################################################################################
source ~/.dotfiles/zsh/settings

source $ZSH/oh-my-zsh.sh
